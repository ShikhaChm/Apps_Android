<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shikhach.tictactoe.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="433dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginTop="8dp"
        android:id="@+id/relativeLayout">

        <ImageView
            android:id="@+id/iv11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:onClick="play1"
            app:srcCompat="@drawable/board" />

        <ImageView
            android:id="@+id/iv12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv11"
            android:layout_toRightOf="@+id/iv11"
            android:onClick="play2"
            app:srcCompat="@drawable/board" />

        <ImageView
            android:id="@+id/iv13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/iv12"
            android:layout_toRightOf="@+id/iv12"
            android:onClick="play3"
            app:srcCompat="@drawable/board" />

        <ImageView
            android:id="@+id/iv21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv11"
            android:onClick="play4"
            app:srcCompat="@drawable/board" />

        <ImageView
            android:id="@+id/iv22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv12"
            android:layout_alignStart="@+id/iv12"
            android:layout_below="@+id/iv11"
            android:onClick="play5"
            app:srcCompat="@drawable/board" />

        <ImageView
            android:id="@+id/iv23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv12"
            android:layout_toEndOf="@+id/iv12"
            android:layout_toRightOf="@+id/iv12"
            android:onClick="play6"
            app:srcCompat="@drawable/board" />

        <ImageView
            android:id="@+id/iv31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv21"
            android:longClickable="true"
            android:nestedScrollingEnabled="false"
            android:onClick="play7"
            app:srcCompat="@drawable/board" />

        <ImageView
            android:id="@+id/iv32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/iv22"
            android:layout_alignStart="@+id/iv22"
            android:layout_below="@+id/iv21"
            android:onClick="play8"
            app:srcCompat="@drawable/board" />

        <ImageView
            android:id="@+id/iv33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv22"
            android:layout_toEndOf="@+id/iv22"
            android:layout_toRightOf="@+id/iv22"
            android:onClick="play9"
            app:srcCompat="@drawable/board" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:onClick="resetClick"
            android:text="restart game"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="91dp"
            android:layout_marginStart="91dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46dp"
        android:fontFamily="sans-serif-condensed"
        android:lineSpacingExtra="8sp"
        android:text="Tic-Tac-Toe"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:verticalScrollbarPosition="defaultPosition"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        tools:layout_editor_absoluteX="8dp" />

</android.support.constraint.ConstraintLayout>
